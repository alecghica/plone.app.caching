<registry>

    <!-- Basic cache settings from plone.caching -->
    <records interface="plone.caching.interfaces.ICacheSettings" />
    
    <!-- Purge settings -->
    <records interface="plone.cachepurging.interfaces.ICachePurgingSettings" />
    
    <!-- Plone-specific settings from this package -->
    <records interface="plone.app.caching.interfaces.IPloneCacheSettings" />
    
    <!-- Default content type/template mappings
         ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    
    <record name="plone.app.caching.interfaces.IPloneCacheSettings.contentTypeRulesetMapping">
        <value purge="False">
          <element key="News Item">plone.content.itemView</element>
          <element key="Image">plone.content.itemView</element>
          <element key="Topic">plone.content.folderView</element>
          <element key="Link">plone.content.itemView</element>
          <element key="File">plone.content.itemView</element>
          <element key="Large Plone Folder">plone.content.folderView</element>
          <element key="Folder">plone.content.folderView</element>
          <element key="Document">plone.content.itemView</element>
          <element key="Event">plone.content.itemView</element>
        </value>
    </record>
    
    <record name="plone.app.caching.interfaces.IPloneCacheSettings.templateRulesetMapping">
        <value purge="False">
          <element key="search">plone.content.feed</element>
          <element key="RSS">plone.content.feed</element>
        </value>
    </record>
    
    <record name="plone.app.caching.interfaces.IPloneCacheSettings.purgedContentTypes">
        <value purge="False">
          <element>File</element>
          <element>Image</element>
        </value>
    </record>
    
    <!-- Settings for default operations
         ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
    
    <!-- Chain -->
    <record name="plone.caching.operations.chain.operations">
        <field type="plone.registry.field.List">
            <title>Operations</title>
            <description>A list of operations to call, in order</description>
            <value_type type="plone.registry.field.DottedName" />
        </field>
        <value></value>
    </record>
    
    <!-- Composite views -->
    <record name="plone.app.caching.compositeviews.etags">
        <field type="plone.registry.field.Tuple">
            <title>ETags</title>
            <description>A list of ETag component names to include</description>
            <value_type type="plone.registry.field.ASCIILine" />
        </field>
        <value>
            <element>userid</element>
            <element>catalogCounter</element>
            <element>language</element>
            <element>gzip</element>
            <element>skin</element>
            <element>locked</element>
        </value>
    </record>
    
    <!-- Content feeds -->
    <record name="plone.app.caching.contentfeeds.etags">
        <field type="plone.registry.field.Tuple">
            <title>ETags</title>
            <description>A list of ETag component names to include</description>
            <value_type type="plone.registry.field.ASCIILine" />
        </field>
        <value>
            <element>userid</element>
            <element>catalogCounter</element>
            <element>language</element>
            <element>gzip</element>
            <element>skin</element>
        </value>
    </record>
    
    <!-- Content feeds with proxy -->
    <record name="plone.app.caching.contentfeedswithproxy.etags">
        <field type="plone.registry.field.Tuple">
            <title>ETags</title>
            <description>A list of ETag component names to include</description>
            <value_type type="plone.registry.field.ASCIILine" />
        </field>
        <value>
            <element>userid</element>
            <element>catalogCounter</element>
            <element>language</element>
            <element>gzip</element>
            <element>skin</element>
        </value>
    </record>
    
    <record name="plone.app.caching.contentfeedswithproxy.smaxage">
        <field type="plone.registry.field.Int">
            <title>Shared maximum age</title>
            <description>Time (in seconds) to cache the response in the caching proxy</description>
        </field>
        <value>86400</value>
    </record>
    
    <record name="plone.app.caching.contentfeedswithproxy.vary">
        <field type="plone.registry.field.ASCIILine">
            <title>Vary</title>
            <description>Name(s) of HTTP headers that must match for the caching proxy to return a cached response</description>
        </field>
        <value></value>
    </record>
    
    <!-- Downloads -->
    
    <!-- (no options) -->
    
    <!-- Downloads with proxy -->
    <record name="plone.app.caching.downloadswithproxy.smaxage">
        <field type="plone.registry.field.Int">
            <title>Shared maximum age</title>
            <description>Time (in seconds) to cache the response in the caching proxy</description>
        </field>
        <value>86400</value>
    </record>
    
    <record name="plone.app.caching.downloadswithproxy.vary">
        <field type="plone.registry.field.ASCIILine">
            <title>Vary</title>
            <description>Name(s) of HTTP headers that must match for the caching proxy to return a cached response</description>
            <required>False</required>
        </field>
        <value></value>
    </record>
    
    <!-- Resources -->
    <record name="plone.app.caching.resources.maxage">
        <field type="plone.registry.field.Int">
            <title>Maximum age</title>
            <description>Time (in seconds) to cache the response in the browser or caching proxy</description>
        </field>
        <value>86400</value>
    </record>
    
    <record name="plone.app.caching.resources.vary">
        <field type="plone.registry.field.ASCIILine">
            <title>Vary</title>
            <description>Name(s) of HTTP headers that must match for the caching proxy to return a cached response</description>
            <required>False</required>
        </field>
        <value></value>
    </record>
    
    <!-- Resources with stable URLs -->
    <record name="plone.app.caching.stableresources.maxage">
        <field type="plone.registry.field.Int">
            <title>Maximum age</title>
            <description>Time (in seconds) to cache the response in the browser or caching proxy</description>
        </field>
        <value>31536000</value>
    </record>
    
    <record name="plone.app.caching.stableresources.etags">
        <field type="plone.registry.field.Tuple">
            <title>ETags</title>
            <description>A list of ETag component names to include</description>
            <value_type type="plone.registry.field.ASCIILine" />
        </field>
        <value></value>
    </record>
    
    <record name="plone.app.caching.stableresources.vary">
        <field type="plone.registry.field.ASCIILine">
            <title>Vary</title>
            <description>Name(s) of HTTP headers that must match for the caching proxy to return a cached response</description>
            <required>False</required>
        </field>
        <value></value>
    </record>
    
</registry>